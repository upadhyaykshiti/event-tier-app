{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["server.ts", "app/**/*", "types"]
}
